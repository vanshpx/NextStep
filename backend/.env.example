# Copy this file to .env and fill in your values.
# .env is git-ignored — never commit real keys.

# ── LLM ──────────────────────────────────────────────────────────────────────
USE_STUB_LLM=true
# LLM_API_KEY=

# ── Attraction data source ────────────────────────────────────────────────────
# Set to false + supply GOOGLE_PLACES_API_KEY to enable any city via live API.
USE_STUB_ATTRACTIONS=true
# GOOGLE_PLACES_API_KEY=AIza...
# GOOGLE_PLACES_SEARCH_RADIUS_M=10000
# GOOGLE_PLACES_MAX_RESULTS=20

# ── Other tool stubs ──────────────────────────────────────────────────────────
USE_STUB_HOTELS=true
USE_STUB_RESTAURANTS=true
USE_STUB_FLIGHTS=true

# ── TBO API — Hotels + Flights ───────────────────────────────────────────────
# Set USE_STUB_HOTELS=false and/or USE_STUB_FLIGHTS=false to enable live TBO data.
# Both Hotel and Air APIs share the same credentials.
# TBO_USERNAME=your_tbo_username
# TBO_PASSWORD=your_tbo_password
# TBO_HOTEL_BASE_URL=http://api.tbotechnology.in/TBOHolidays_HotelAPI
# TBO_AIR_BASE_URL=https://api.tbotechnology.in
# TBO_REQUEST_TIMEOUT=30
